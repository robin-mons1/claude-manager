{
  "name": "claudemanager",
  "productName": "Claude Manager",
  "version": "1.0.0",
  "description": "Desktop terminal manager with mobile access via ngrok",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "dev:electron": "concurrently -n server,client,electron \"npm run dev:server\" \"npm run dev:client\" \"npm run wait-electron\"",
    "wait-electron": "wait-on tcp:3000 tcp:5173 -t 30000 && electron .",
    "build": "vite build && tsc -p tsconfig.server.json",
    "build:electron": "npm run build && electron-builder",
    "start": "node dist/server/index.js",
    "start:electron": "electron .",
    "setup": "tsx scripts/setup-password.ts"
  },
  "build": {
    "appId": "com.claudemanager.app",
    "productName": "Claude Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "jsonwebtoken": "^9.0.0",
    "node-pty": "^1.0.0",
    "pinia": "^2.1.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "splitpanes": "^4.0.4",
    "swiper": "^11.0.0",
    "uuid": "^9.0.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  }
}
